<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@drawable/layout">

    <!-- 프로필사진 -->
    <ImageView
        android:id="@+id/reply_profile_picture"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:background="@drawable/post_profile"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 프로필이름 -->
    <TextView
        android:id="@+id/reply_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="9dp"
        android:gravity="left"
        android:lineSpacingExtra="6sp"
        android:translationY="-2.9sp"
        android:text="프로필 이름"
        android:textSize="@style/noticeboard_profile_name"
        app:layout_constraintStart_toEndOf="@+id/reply_profile_picture"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/reply_content"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="start"
        android:layout_marginTop="11dp"
        android:lineSpacingExtra="1sp"
        android:text="댓글댓글댓글"
        android:textAppearance="@style/reply_content"
        android:translationY="-0.48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/reply_profile_name"
        app:layout_constraintTop_toBottomOf="@+id/reply_profile_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/reply_reg_date"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="2022.xx.xx x요일"
        android:textAppearance="@style/reply_reg_text"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reply_delete_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textSize="15dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/reply_reg_date"
        app:layout_constraintTop_toBottomOf="@+id/reply_reg_date" />


</androidx.constraintlayout.widget.ConstraintLayout>