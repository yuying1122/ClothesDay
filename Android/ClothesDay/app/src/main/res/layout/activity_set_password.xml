
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/option_setprotect">

    <TextView
        android:id="@+id/set_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="49dp"
        android:gravity="top"
        android:text="비밀번호 변경"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/set_password_ine6"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/option_line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_password_text" />

    <TextView
        android:id="@+id/set_password_now_password_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="46dp"
        android:gravity="top"
        android:text="현재 비밀번호"
        android:textAppearance="@style/signup_text"
        app:layout_constraintStart_toStartOf="@+id/set_password_now_password_input"
        app:layout_constraintTop_toBottomOf="@+id/set_password_ine6" />

    <EditText
        android:id="@+id/set_password_now_password_input"
        android:layout_width="323dp"
        android:layout_height="25dp"
        android:background="@null"
        android:drawableBottom="@drawable/input"
        android:maxLength="15"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_password_now_password_text" />

    <!-- 비밀번호  -->
    <TextView
        android:id="@+id/set_password_pw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:gravity="top"
        android:text="새 비밀번호"
        android:textAppearance="@style/signup_text"
        app:layout_constraintStart_toStartOf="@+id/set_password_now_password_text"
        app:layout_constraintTop_toBottomOf="@+id/set_password_now_password_input" />

    <!-- 비번 입력 -->
    <EditText
        android:id="@+id/set_password_pw_input"
        android:layout_width="323dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:background="@null"
        android:drawableBottom="@drawable/input"
        android:inputType="textPassword"
        android:maxLength="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_password_pw_text" />

    <TextView
        android:id="@+id/set_password_pw_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:gravity="top"
        android:text="새 비밀번호 확인"
        android:textAppearance="@style/signup_text"
        app:layout_constraintStart_toStartOf="@+id/set_password_pw_text"
        app:layout_constraintTop_toBottomOf="@+id/set_password_pw_input" />

    <EditText
        android:id="@+id/set_password_pw_input2"
        android:layout_width="323dp"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:background="@null"
        android:drawableBottom="@drawable/input"
        android:inputType="textPassword"
        android:maxLength="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_password_pw_text2" />

    <!-- 가입하기 버튼 -->
    <Button
        android:id="@+id/set_password_btn"
        android:layout_width="95dp"
        android:layout_height="23dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/signup_btn"
        android:text="적용하기"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/set_password_pw_input2"
        app:layout_constraintTop_toBottomOf="@+id/set_password_pw_input2" />

</androidx.constraintlayout.widget.ConstraintLayout>